<div class="mt-4">
    <h3>Thêm bài hát</h3>
    <form method="POST" action="/courses/store">
        <div class="form-group">
            <label for="name">Tên bài hát</label>
            <input type="text" class="form-control"  name="name">
        </div>
        <div class="form-group">
            <label for="singername">Tên ca sỹ</label>
            <input type="text" class="form-control"  name="singername">
        </div>
        <div class="form-group">
            <label for="lyrics">Lyric</label>
            <textarea class="form-control"  name="lyrics"></textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video ID Youtube</label>
            <input type="text" class="form-control"  name="videoId">
        </div>
        <div class="form-group">
            <label for="image">Link ảnh</label>
            <input type="text" class="form-control"  name="image">
        </div>
        <button type="submit" class="btn btn-primary">OK</button>
    </form>
</div>