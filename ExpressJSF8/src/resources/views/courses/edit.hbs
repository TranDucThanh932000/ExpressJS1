<div class="mt-4">
    <h3>Sửa bài hát</h3>
    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên bài hát</label>
            <input type="text" class="form-control" value="{{course.name}}"  name="name">
        </div>
        <div class="form-group">
            <label for="singername">Tên ca sỹ</label>
            <input type="text" class="form-control" value="{{course.singername}}"  name="singername">
        </div>
        <div class="form-group">
            <label for="lyrics">Lyric</label>
            <textarea class="form-control"  name="lyrics">{{course.lyrics}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video ID Youtube</label>
            <input type="text" class="form-control" value="{{course.videoId}}" name="videoId">
        </div>
        <div class="form-group">
            <label for="image">Link ảnh</label>
            <input type="text" class="form-control" value="{{course.image}}" name="image">
        </div>
        <button type="submit" class="btn btn-primary">OK</button>
    </form>
</div>